<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <RelativeLayout
        android:id="@+id/login_demo_relative"
        android:layout_width="225dp"
        android:layout_height="18dp"
        android:layout_centerHorizontal="true">

        <View
            android:id="@+id/login_demo_view"
            android:layout_width="51dp"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:background="#ffffff">

        </View>

        <TextView
            android:id="@+id/login_demo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="其他方式登录"
            android:textColor="#ffffff" />

        <View
            android:id="@+id/login_demo_view1"
            android:layout_width="51dp"
            android:layout_height="2dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#ffffff">

        </View>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_demo_relative"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/login_demo_weixin_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/login_demo_weixin"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/login_demo_weixin_white"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_demo_weixin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="微信登录"
                android:textColor="#ffffff" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/login_demo_weibo_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/login_demo_weibo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/login_demo_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_demo_weibo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="验证码登录"
                android:textColor="#ffffff" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>