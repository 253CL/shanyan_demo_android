<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_demo_dialog_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="12dp"
        android:layout_weight="7"
        android:background="@drawable/login_demo_dialog_bg_one"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="11dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/login_dialog_title_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="友情提示"
                android:textColor="#497DFF"
                android:textSize="21sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="11dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/login_dialog_title_right" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/login_demo_dialog_tv"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#ffffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/wifi_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:lineSpacingMultiplier="1.3"
                        android:text="是否开启了wifi：是（个别oppo及vivo机型首次无法在wifi开启下调用SDK）"
                        android:textColor="#ff60667d"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/login_demo_dialog_tv"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#ffffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/network_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:lineSpacingMultiplier="1.3"
                        android:text="当前流量网络类型：lte（请确定当前流量网络类型为4G或5G网络）"
                        android:textColor="#ff60667d"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lt_wap_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/login_demo_dialog_tv"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="#ffffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/lt_wap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:lineSpacingMultiplier="1.3"
                        android:text="如果是联通卡（3gpnet/3gpwap）：3gwap开启，3gnet未开启（3gwap不支持SDK）（非联通卡不显示该日志）"
                        android:textColor="#ff60667d"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/msg_tip_one"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/login_demo_dialog_tv"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="#ffffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/init_cost_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:lineSpacingMultiplier="1.3"
                        android:text="当前初始化服务器速率：10MS（4000MS以上可能超时）"
                        android:textColor="#ff60667d"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/msg_tip_two"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/login_demo_dialog_tv"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="#ffffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/pre_cost_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:lineSpacingMultiplier="1.3"
                        android:text="当前链接运营商基站速率（预取号）：20MS（4000MS以上可能超时）"
                        android:textColor="#ff60667d"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_sure"
            android:layout_width="140dp"
            android:layout_height="36dp"
            android:background="@drawable/login_demo_dialog_tv"
            android:gravity="center"
            android:text="知道了"
            android:textColor="#ffffffff"
            android:textSize="15sp" />

    </LinearLayout>


</LinearLayout>
