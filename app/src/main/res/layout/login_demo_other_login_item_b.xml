<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/login_demo_relative"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <View
            android:id="@+id/login_demo_view"
            android:layout_width="51dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#D8D8D8">

        </View>

        <TextView
            android:id="@+id/login_demo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:text="或使用微信登录"
            android:textColor="#808080" />

        <View
            android:id="@+id/login_demo_view1"
            android:layout_width="51dp"
            android:layout_height="1dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#D8D8D8">

        </View>

    </RelativeLayout>

    <ImageView
        android:id="@+id/login_demo_weixin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/login_demo_relative"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_demo_weixin"
        android:scaleType="centerCrop" />

</RelativeLayout>